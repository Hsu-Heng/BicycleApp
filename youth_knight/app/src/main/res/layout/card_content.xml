<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:elevation="3dp"
    card_view:cardCornerRadius="1dp"
    android:id="@+id/card_schuleconten_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="25dp"
            android:text="08:00"
            android:id="@+id/card_schuleconten_content_tstart"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="68dp"
            android:id="@+id/card_schuleconten_content_image"
            android:src="@drawable/ic_action_markplus"
            android:background="@color/colorPrimary"
            android:layout_below="@id/card_schuleconten_content_tstart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="08:00"
            android:layout_below="@+id/card_schuleconten_content_image"
            android:id="@+id/card_schuleconten_content_tend"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_schuleconten_content_t_content"
            android:text="hey"
            android:textSize="50dp"
            android:paddingTop="10dp"
            android:background="@drawable/text_view_border"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:id="@+id/card_schuleconten_content_t_address"
            android:text="het"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_below="@+id/card_schuleconten_content_t_content"
            android:layout_marginLeft="70dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>